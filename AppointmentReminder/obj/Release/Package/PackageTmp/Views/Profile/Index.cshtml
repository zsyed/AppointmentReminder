@{
	ViewBag.InitModule = "ProfileModule";
}

@section Scripts {
	<script src="~/js/profile-index.js"></script>
}

<h2>My Profile</h2>

</br></br></br>
<div data-ng-controller="ProfileIndexController">
	<div data-ng-show="profile.FirstName == null">
		<a href="/Profile/Create" class="btn btn-primary">Create New</a>
	</div>

	</br>

	<div data-ng-show="profile.FirstName != null">
		<div> <label>First Name:</label> {{profile.FirstName}} </div>
		<div> <label>Last Name:</label>{{profile.LastName}} </div>
		<div> <label>Cell Phone Number:</label>{{profile.PhoneNumber}} </div>
		<div> <label>Email Address:</label>{{profile.EmailAddress}} </div>
		<br /><br />
		<div><label>Active:</label> {{!profile.DeActivate}} </div>
		</br><br />
		<div>
			<a href="/Profile/Edit" class="btn btn-primary">Edit</a>
		</div>
	</div>
</div>