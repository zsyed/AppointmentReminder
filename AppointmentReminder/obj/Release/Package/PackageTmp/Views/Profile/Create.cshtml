@{
	ViewBag.InitModule = "ProfileModule";
}

@section Scripts {
	<script src="~/js/profile-index.js"></script>
}

<h2>My Profile - Create</h2>

<div data-ng-controller="ProfileCreateController">
	<form name ="createProfile" data-ng-submit="saveCreateProfile()">

		<div>
			<label>First Name: </label>
			<input required="First Name is required" type="text" placeholder="Enter First Name" data-ng-model="profile.FirstName"/>
		</div>
		<div>
			<label>Last Name: </label>
			<input type="text" placeholder="Enter Last Name" data-ng-model="profile.LastName"/>
		</div>
		<div>
			<label>Email Address: </label>
			<input type="text" placeholder="Enter Email Address" data-ng-model="profile.EmailAddress"/>
		</div>
		<div>
			<label>Phone Number: </label>
			<input type="text" placeholder="Enter Phone Number" data-ng-model="profile.PhoneNumber"/>
		</div>

		<div></div>
		<div>
			<input type="submit" value="Create" />
		</div>
	</form>
</div>

