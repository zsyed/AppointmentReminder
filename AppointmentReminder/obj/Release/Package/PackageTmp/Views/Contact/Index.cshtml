@{
	ViewBag.InitModule = "ContactModule";
}

@section Scripts {
	<script src="~/js/contact.js"></script>
}

<h2>My Contacts</h2>

</br>

<div data-ng-controller="ContactIndexController">

	<a href="/Contact/Create" class="btn btn-primary">Create New</a>

</br><br/><br/>
	
		<table class="table">
		<thead>
			<tr>
				<th> <b>First Name</b></th>
				<th> <b>Last Name</b></th>
				<th> <b>Phone Number</b></th>
				<th> <b>Email Address</b></th>
				<th> <b>Time Zone</b></th>
				<th> <b>Active</b></th>
				<th> <b>Email</b></th>
				<th> <b>SMS</b></th>
				<th></th>
				<th></th>
			<th></th>

			</tr>
				
		</thead>
		<tbody>
			<tr data-ng-repeat="contact in contacts">
				<td>{{contact.FirstName}}</td>
				<td>{{contact.LastName}}</td>
				<td>{{contact.PhoneNumber}}</td>
				<td>{{contact.EmailAddress}}</td>
				<td>{{contact.TimeZone}}</td>
				<td>{{contact.Active == true? "Yes": "No"}}</td>
				<td>{{contact.SendEmail == true? "Yes": "No"}}</td>
				<td>{{contact.SendSMS == true? "Yes": "No"}}</td>
				<td><a href="/Contact/Edit/{{contact.Id}}" class="btn btn-primary">Edit</a></td>
				<td><a href="/Contact/Delete/{{contact.Id}}" class="btn btn-primary">Delete</a></td>
			</tr>
		</tbody>
	</table>


</div>

