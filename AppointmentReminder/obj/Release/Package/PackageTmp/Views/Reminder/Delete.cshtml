@{
	ViewBag.InitModule = "ReminderModule";
}

@section Scripts {
	<script src="~/js/reminder.js"></script>
}

<h2>Reminder - Delete</h2>

<div data-ng-controller="ReminderDeleteController">
	<form name ="deleteReminder" data-ng-submit="saveDeleteReminder()">
		<div>
			<label>Contact Name: {{reminder.ContactName}} </label>
		</div>
		<div>
			<label>Message: {{reminder.Message}} </label>
		</div>
		<div>
			<label>Reminder Date Time: {{reminder.ReminderDateTime.substring(0,4) == '1901' ? "None" : reminder.ReminderDateTime | date: 'EEE MM/dd/yyyy hh:mma' }}</label>
		</div>
		<div></div>
		<div>
			<button class="btn btn-primary" type="submit">Delete</button>
		</div>
	</form>
</div>


@*{{reminder.ReminderDateTime}}*@