@{
	ViewBag.InitModule = "ProfileModule";
}

@section Scripts {
	<script src="~/js/profile-index.js"></script>
}

<div data-ng-controller="ProfileEditController">

	<form class="form-horizontal" name ="editProfile" data-ng-submit="saveEditProfile()">
	<fieldset>
		<legend>Edit Profile</legend>
		<div class="form-group" >


			<label class="col-sm-3 control-label"  >First Name: </label>
			<div class="col-sm-9" >
				<input class="form-control"  required type="text" placeholder="Enter First Name" data-ng-model="profile.FirstName"/>
			</div>
			<label class="col-sm-3 control-label"  >Last Name: </label>
			<div class="col-sm-9" >
				<input class="form-control"  required type="text" placeholder="Enter Last Name" data-ng-model="profile.LastName"/>
			</div>
			<label class="col-sm-3 control-label"  >Email Address: </label>
			<div class="col-sm-9" >
				<input class="form-control"  required type="text" placeholder="Enter Email Address" data-ng-model="profile.EmailAddress"/>
			</div>
			<label class="col-sm-3 control-label"  >Cell Phone Number: </label>
			<div class="col-sm-9" >
				<input class="form-control"  required type="text" placeholder="Enter Cell Phone Number" data-ng-model="profile.PhoneNumber"/>
			</div>
			<label class="col-sm-3 control-label"  >DeActivate: </label>
			<div class="col-sm-9" >
				<input class="form-control" value="true"  type="checkbox" data-ng-model="profile.DeActivate"/>
			</div>
	
		</div>
	</fieldset>
		

</div>

<div class="col-sm-9 col-sm-offset-3" >
	<input type="submit" class="btn btn-primary" value="Update"/>
	</div>

</form>


