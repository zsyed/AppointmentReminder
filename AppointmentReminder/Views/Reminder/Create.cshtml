@model AppointmentReminder.Models.ReminderModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
	    <legend>ReminderModel</legend>
		
		@Html.HiddenFor(model => model.ProfileId)

	    <div class="editor-label">
            @Html.LabelFor(model => model.ReminderDateTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ReminderDateTime)
            @Html.ValidationMessageFor(model => model.ReminderDateTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Message)
        </div>
	    <div class="editor-field">
		    @Html.EditorFor(model => model.Message)
		    @Html.ValidationMessageFor(model => model.Message)
	    </div>
		
        <div class="editor-label">
             @Html.LabelFor(model => model.ContactName)
        </div>
        <div class="editor-field">
    @(Html.Kendo().ComboBoxFor(model => model.ContactId)
	.Value(Model.ContactId == 0 ? string.Empty: Model.ContactId.ToString())
          .Name("ContactId")
          .DataTextField("Text")
          .DataValueField("Value")
		  .Placeholder("Select Contact Name...")
          .DataSource(source => {
              source.Read(read =>
              {
                  read.Action("GetContacts", "Contact");
              }); 
          })
    )
        </div>

	    <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
