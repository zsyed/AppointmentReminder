@{
	ViewBag.InitModule = "ContactModule";
}

@section Scripts {
	<script src="~/js/contact.js"></script>
}

<h2>My Contacts</h2>

</br>

<div data-ng-controller="ContactIndexController">

	<a href="/Contact/Create" class="btn btn-primary">Create New</a>

	</br>

	<div data-ng-repeat="contact in contacts" >
		<div>First Name: {{contact.FirstName}} </div>
		<div>Last Name: {{contact.LastName}} </div>
		<div>Cell Phone Number: {{contact.PhoneNumber}} </div>
		<div>Email Address: {{contact.EmailAddress}} </div>
		</br>
		<div>
			<a href="/Contact/Edit/{{contact.Id}}" class="btn btn-primary">Edit</a>
			<a href="/Contact/Delete/{{contact.Id}}" class="btn btn-primary">Delete</a>
		</div>
	</div>
</div>

